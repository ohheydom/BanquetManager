= form_for(@client, :html => {class: 'form-inline'}) do |f|
  %div.form-group
    - if @client.errors.any? 
      %div#error_explanation
        %h2= "#{pluralize(@client.errors.count, "error")} prohibited this client from being saved:"
        %ul
          - @client.errors.full_messages.each do |msg|
            %li= msg
    %div.field
      = f.label :name
      %br
      = f.text_field :name, class: 'form-control'
    %div.field
      = f.label :guests_of_honor
      %br
      = f.text_field :guests_of_honor, class: 'form-control'
    %div.field
      = f.label :phone_number 
      %br
      = f.text_field :phone_number, class: 'form-control'
    %div.field
      = f.label :date_of_event 
      %br
      = f.date_select :date_of_event, order: [:month, :day, :year]
    %div.field
      = f.label :date_booked
      %br
      = f.date_select :date_booked, order: [:month, :day, :year]
    %div.field
      = f.label :type_of_event
      %br
      = f.text_field :type_of_event, class: 'form-control'
    %div.field
      = f.label :minimum_guarantee
      %br
      = f.number_field :minimum_guarantee, class: 'form-control'
    %div.field
      = f.label :amount_of_guests
      %br
      = f.number_field :amount_of_guests, class: 'form-control'
    %div.field
      = f.label :base_price
      %br
      = f.text_field :base_price, class: 'form-control'
    %div.field
      = f.label :additional_charges
      %br
      = f.text_field :additional_charges, class: 'form-control'
    %div.field
      = f.label :deposit
      %br
      = f.text_field :deposit, class: 'form-control'
    %div.field
      = f.label :payment_1_date
      %br
      = f.date_select :payment_1_date, order: [:month, :day, :year]
    %div.field
      = f.label :payment_2_date
      %br
      = f.date_select :payment_2_date, order: [:month, :day, :year]
    %div.field
      = f.label :final_payment_date
      %br
      = f.date_select :final_payment_date, order: [:month, :day, :year]
    %div.field
      = f.label :payment_1
      %br
      = f.text_field :payment_1, class: 'form-control'
    %div.field
      = f.label :payment_2
      %br
      = f.text_field :payment_2, class: 'form-control'
    %div.field
      = f.label :menu 
      %br
      = f.date_select :menu, order: [:month, :day, :year] 
    %div.actions= f.submit "Submit", name: nil, class: 'btn btn-default' 
